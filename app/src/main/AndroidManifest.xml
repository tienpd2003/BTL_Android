<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.homehunt">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/house"
        android:label="Homehunt"
        android:roundIcon="@drawable/house"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".views.SearchView"
            android:exported="false" />
        <activity
            android:name=".views.LocationSearch"
            android:exported="false" />
        <activity
            android:name=".views.AccountView"
            android:exported="false" />
        <activity
            android:name=".views.PersonalPage"
            android:exported="false" />
        <activity
            android:name=".views.RoomManagement"
            android:exported="false" />
        <activity
            android:name=".views.DetailRoom"
            android:exported="false" />
        <activity
            android:name=".views.PostRoom"
            android:exported="false" />
        <activity
            android:name=".views.MainMenu"
            android:exported="false" />
        <activity
            android:name=".views.ResetPassword"
            android:exported="false" />
        <activity
            android:name=".views.LoginView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SignupView"
            android:exported="false" />
    </application>

</manifest>