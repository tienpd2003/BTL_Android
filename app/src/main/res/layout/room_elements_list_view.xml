<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewRoomList"
    android:padding="0dp"
    app:cardElevation="0dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_room"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dip"
                    android:src="@drawable/ic_room"
                    app:riv_oval="false" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_timeCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="10/10/2023"
                android:layout_gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:text="KÍ TÚC XÁ"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cho thuê phòng trọ giá rẻ"
                android:textColor="#666666"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                android:ellipsize="end"
                android:layout_marginRight="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="2.5 triệu/phòng"
                    android:textColor="#F54500"
                    android:textSize="16dp" />
                />

                <TextView
                    android:id="@+id/txt_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:text="5m x 4m"
                    android:textColor="#666666"
                    android:textSize="16dp"
                    android:layout_marginRight="15dp"/>
                />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="96A, Mộ Lao, Hà Đông, Hà Nội"
                android:textColor="#666666"
                android:textSize="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:layout_marginRight="5dp"/>
            />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>