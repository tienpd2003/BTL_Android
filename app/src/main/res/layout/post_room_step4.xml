<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên phòng trọ"
                android:textSize="20dp"
                android:textColor="#666666"
                android:textStyle="bold"/>
            <EditText
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:id="@+id/edt_name_push_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="Nhập vào tên phòng trọ"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="18dp"
                android:background="@drawable/custom_spinner_rim"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="20dp"
                android:textColor="#666666"
                android:textStyle="bold"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="10"
                android:maxLines="10"
                android:minLines="3"
                android:scrollbars="vertical"
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:id="@+id/edt_describe_push_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nhập vào mô tả"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#666666"
                android:background="@drawable/custom_spinner_rim"/>
            <Button
                android:id="@+id/btn_nextStep4_post_room"
                android:layout_width="match_parent"
                android:height="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_button_login"
                android:text="Đăng phòng"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>